<%= render 'shared/title', title: "'Profile: #{@user.username}'" %>

<div class="well">
 <dl class="dl-horizontal">
  <dt>Username:</dt>
  <dd><%= @user.username %></dd> 
 </dl> 
</div>	

<h5><%= @user.username %>'s Activity</h5>

<ul class="nav nav-tabs">
 <li class="<%= "active" if params[:tab].nil? %>"><%= link_to "Posts(#{@user.comments.size})", user_path(@user) %></li>
 <li class="<%= 'active' if params[:tab] == 'comments'%>"><%= link_to "Comments (#{@user.posts.size})", user_path(@user,tab: 'comments') %></li>	 </ul>
<% if params[:tab].nil? %>
 <%= render 'posts/post', post: @user.posts %>
<% else %>
  <%= render 'shared/comments', obj: @user, post_link: true %>
<% end %> 