<% post_link ||= false %>
<h5>Comments:</h5>

<% obj.comments.each do |comment|%>
 <% if logged_in? %>    
  <div class="row">
    <div class="span0 well text-center">
    <%= link_to vote_post_comment_path(comment.post,comment,vote: true),method: 'post' do %>
      <i class="icon-arrow-up"></i>
      <% end %>
       <br></br>
      <span><%= comment.total_votes %></span>
      <br></br>
      <%= link_to vote_post_comment_path(comment.post,comment,vote: false), method: 'post'  do %>
      <i class="icon-arrow-down"></i>
      <% end %>
    </div>
      <% end %>  

      <div class="well span8">
      	<% if post_link  %>
      	<p><em>Comment belongs to :<%= link_to "#{comment.post.title}",post_path(comment) %></em></p>
        <% end %>
        <br/>
        <em>"<%= comment.body %>"</em>
        <br/>
        <br/>
       <span class="quiet">Posted by</span> <%= link_to  comment.creator.username,user_path(comment.creator) %> <small> at <%= display_time(comment.created_at) %></small>
      </div>
     </div>  
<% end %>
  